@model Movie

@{
    Layout = "_Layout";
    
}
<!DOCTYPE html>
<html>
<head>
    <title>Movie Collection</title>
    <link rel="stylesheet" href="~/bootstrap.css" />
</head>
<body>
<h2>Movie</h2>

<form method="post">

    <input type="hidden" asp-for="MovieId">
    <div>
        <label>Category:</label>
        <select asp-for="CategoryId" required>
            <option value="">Select a Category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>


    <div>
        <label>Title:</label>
        <input asp-for="Title" required/>
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label>Year:</label>
        <input asp-for="Year" type="number" required/>
        <span asp-validation-for="Year"></span>
    </div>

    <div>
        <label>Director:</label>
        <input asp-for="Director" required/>
        <span asp-validation-for="Director"></span>
    </div>

    <div>
        <label>Rating:</label>
        <select asp-for="Rating" required>
            <option value="">Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating"></span>
    </div>

    <div>
        <label>Edited:</label>
        <input asp-for="Edited" type="checkbox"/>
    </div>

    <div>
        <label>Lent To:</label>
        <input asp-for="LentTo"/>
    </div>

    <div>
        <label>Copied to Plex:</label>
        <input asp-for="CopiedToPlex" type="checkbox"/>
    </div>

    <div>
        <label>Notes:</label>
        <textarea asp-for="Notes" maxlength="25"></textarea>
        <span asp-validation-for="Notes"></span>
    </div>

    <button type="submit">Save</button>
    
    <div asp-validation-summary="All"></div>
</form>
</body>
</html>